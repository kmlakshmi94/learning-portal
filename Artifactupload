pipeline {
    agent any
    
    stages {
        stage("Test behaviour") {
            steps {
                script {
                    echo "First step can see the pipeline running"
                    final String url = 'https://api.github.com/users/mralexgray/repos'
                    final def ( response,  code) = sh(script: "curl -s -w '\\n%{response_code}'  $url", returnStdout: true).trim().tokenize("\n")
                    echo "HTTP response status code: $code"
                    echo response
                }

            }
        }
    }
}
